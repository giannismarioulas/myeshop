@model IList<CategoryModel>

@using Nop.Core.Domain.Catalog

@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    <div class="category-item">
                        <h2 class="title">
                             <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                <span>@item.Name</span>
                            </a>
                        </h2>
                        <div class="picture">
                            <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                @*<img width="356" height="231" alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title">*@
                                <picture>
                                    <source type="image/jpeg" srcset="@item.PictureModel.ImageUrl" data-srcset="@item.PictureModel.ImageUrl">
                                    <img height="356" width="231" src="#" data-src="@item.PictureModel.ImageUrl" class="lazy"  alt="@item.PictureModel.AlternateText" title="@item.PictureModel.Title">
                                </picture>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
