@model SocialModel

<ul class="networks">

    @* Facebook *@
    @if (!string.IsNullOrEmpty(Model.FacebookLink))
    {
        <li class="facebook">
            <a href="@Model.FacebookLink" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
                <img src="~/Themes/Flexo/Content/images/facebook.svg" alt="Facebook" />
            </a>
        </li>
    }

    @* Instagram *@
    @if (!string.IsNullOrEmpty(Model.InstagramLink))
    {
        <li class="insta-icon">
            <a href="@Model.InstagramLink" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
                <img src="~/Themes/Flexo/Content/images/instagram.svg" alt="Instagram" />
            </a>
        </li>
    }

    @* TikTok  *@
    <li class="tiktok">
        <a href="@Model.TwitterLink" aria-label="TikTok" target="_blank" rel="noopener noreferrer">
            <img src="~/Themes/Flexo/Content/images/tiktok.svg" alt="TikTok" />
        </a>
    </li>

</ul>
