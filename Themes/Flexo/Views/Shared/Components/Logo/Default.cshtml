@model LogoModel
@using Nop.Core
@inject IThemeContext themeContext
@{

    var themeName = await themeContext.GetWorkingThemeNameAsync();
}
<a href="@Url.RouteUrl("Homepage")">


    @if (!string.IsNullOrEmpty(Model.LogoPath))
    {
        <img class="not-sticky" width="266" height="80" title="" alt="@Model.StoreName" src="@Model.LogoPath">
    }
    else
    {
        <img class="not-sticky" width="266" height="80" title="" alt="@Model.StoreName" src="~/Themes/@(themeName)/Content/images/logo.png" />
    }
</a>
