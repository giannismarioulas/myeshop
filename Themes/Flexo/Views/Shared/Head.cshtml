@using Nop.Core.Domain.Catalog
@using Nop.Services.Helpers

@inject CatalogSettings catalogSettings
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    Layout = "";
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    var supportRtl = await Html.ShouldUseRtlThemeAsync();
    var href = $"~/Themes/{themeName}/Content/css/styles{(supportRtl ? ".rtl" : "")}.css";
    //add main CSS file
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css");

    @* add jQuery UI css file *@
    NopHtml.AppendCssFileParts("~/lib_npm/swiper/swiper-bundle.min.css");
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/animate.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/font-awesome.min.css");
    <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@400;700&display=swap" as="style" rel="stylesheet preload prefetch">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700&display=swap" as="style" rel="stylesheet preload prefetch">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" as="style" rel="stylesheet preload prefetch">
   
}


